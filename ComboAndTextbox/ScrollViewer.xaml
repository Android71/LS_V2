        </Border>
        <Path Data="M0.5,0.5 L79.5,0.5 40,59.5 z" Fill="LightBlue" HorizontalAlignment="Right" Height="60" Margin="0,20,52,0" Stretch="Fill" Stroke="LightBlue" StrokeThickness="1" VerticalAlignment="Top" Width="80"/>
        <Path Data="M40.125,0.5 L79.5,59.5 0.5,59.5 z" Fill="LightBlue" HorizontalAlignment="Right" Margin="0,120,52,90" Stretch="Fill" Stroke="LightBlue" StrokeThickness="1" Width="80"/>-->
    </Grid>
</Window>
